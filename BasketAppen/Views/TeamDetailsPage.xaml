<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasketAppen.Views.TeamDetailsPage"
             Title="{Binding TeamName}">
    <HorizontalStackLayout
         Spacing="200">
        
       
        <Image Source="{Binding ImageSource}"
               HeightRequest="300"
               
               HorizontalOptions="FillAndExpand"></Image>


        <VerticalStackLayout>
            <Label Text="Stats"
                   FontSize ="39">
            </Label>
            
            <Label 
            
            Text="{Binding stats}"
               HorizontalOptions="Center"
               Style="{DynamicResource SubtitleStyle}"
               FontSize="Micro"
               ></Label>

        </VerticalStackLayout>

        <VerticalStackLayout>



            <Label Text="Spelare"
                   FontSize="39">

            </Label>

            <Label
            ></Label>
            <Label Text="{Binding response}"
               HorizontalOptions="FillAndExpand"
               Style="{DynamicResource SubtitleStyle}"
               FontSize="Micro"
        
               ></Label>
        </VerticalStackLayout>
    </HorizontalStackLayout>
    
    
    
</ContentPage>