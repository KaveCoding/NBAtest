<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDemoDel2_2.Views.NBAPage"
             Title="NBAPage">
    
    <StackLayout Orientation="Horizontal">
        <StackLayout Orientation="Vertical">

            <Label Text="Bläddra bland lag"
                   HorizontalOptions="Center"
                   FontSize="50"/>
        
            <ImageButton 
            
                Source="teamlogos.png"
                HeightRequest="400"
                   Clicked="OnClickedGoTeamPage"
            Padding="10"
            
                    HorizontalOptions="Center"></ImageButton>
        </StackLayout>
        
        
        <StackLayout Orientation="Vertical">

            <Label Text="Sök efter spelare"
                   HorizontalOptions="Center"
                   FontSize="50"/>
            

            <ImageButton

            Padding="10"
             Source="nbaplayers.jpg"
                HeightRequest="400"
                    Clicked="OnClickedGoPlayerPage"
                    HorizontalOptions="Center">

            </ImageButton>
        </StackLayout>
    </StackLayout>
</ContentPage>