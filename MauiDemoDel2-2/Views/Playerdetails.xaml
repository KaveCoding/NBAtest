<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDemoDel2_2.Views.Playerdetails"
             Title="Playerdetails">
    <VerticalStackLayout>
        <Label Text="{Binding firstname}"
              HorizontalOptions="Center"
              Style="{DynamicResource TitleStyle}"></Label>
        <Label Text="{Binding lastname}"
              HorizontalOptions="Center"
               Style="{DynamicResource TitleStyle}"></Label>
        <Label Text="{Binding heightinM, StringFormat='Längd: {0} cm'}"
               FontSize="25"
               HorizontalOptions="Center"></Label>
        <Label Text="{Binding weightinKG, StringFormat='Vikt: {0} kg'}"
               FontSize="25"
               HorizontalOptions="Center"></Label>
        <Label Text="{Binding birthdate, StringFormat='Född: {0} '}"
               FontSize="25"
               HorizontalOptions="Center"></Label>
        <Label Text="{Binding position, StringFormat='Position: {0} '}"
               FontSize="25"
               HorizontalOptions="Center"></Label>
    </VerticalStackLayout>
</ContentPage>